@model EMG.Areas.Finitions.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Finition[0].Nom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
