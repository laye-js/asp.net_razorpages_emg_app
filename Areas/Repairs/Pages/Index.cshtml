@page
@model EMG.Areas.Repairs.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Reparations</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Repair[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Repair[0].Coût)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Repair[0].DateRéparation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Repair[0].CarId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Repair) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coût)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateRéparation)
            </td>

            <td>
                    @if (item.Cars != null)
                    {
                        <p class="card-text">VIN : @item.Cars.VIN</p>
                        <p class="card-text">Marque : @item.Cars.Marque.Nom</p>
                        <p class="card-text">Modèle : @item.Cars.Modele.Nom</p>
                        <p class="card-text">Finition : @item.Cars.Finition.Nom</p>
                        <p class="card-text">Annee : @item.Cars.Année</p>

                    }
                </td>
            <td>
                    <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@item.Id">Edit</a> 
                    <a asp-page="./Details" class="btn btn-success" asp-route-id="@item.Id">Details</a> 
                    <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
