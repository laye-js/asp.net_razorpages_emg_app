@page
@model EMG.Areas.Repairs.Pages.CreateModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Create";
    if (!SignInManager.IsSignedIn(User))
    {
        Response.Redirect("/");
    }
}

<h1>Create</h1>

<h4>Repair</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Repair.Description" class="control-label"></label>
                <input asp-for="Repair.Description" class="form-control" />
                <span asp-validation-for="Repair.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repair.Coût" class="control-label"></label>
                <input asp-for="Repair.Coût" class="form-control" />
                <span asp-validation-for="Repair.Coût" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repair.DateRéparation" class="control-label"></label>
                <input asp-for="Repair.DateRéparation" class="form-control" />
                <span asp-validation-for="Repair.DateRéparation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repair.CarId" class="control-label"></label>
                <select asp-for="Repair.CarId" class="form-control" asp-items="ViewBag.CarId"></select>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Créer" class="btn btn-primary" />
                <a class="btn btn-success" asp-page="Index">Retour à la liste</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
